---
// src/pages/index.astro
const bgUrl = "https://images.unsplash.com/photo-1467269204594-9661b134dd2b?auto=format&fit=crop&w=2000&q=80"; // replace with your photo
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Dulmaland | Global Investment Advisory</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <style>
      :root {
        --navy: #0f2339;
        --navy-80: rgba(15, 35, 57, 0.8);
        --gold: #c7a34b;
        --text: #f4f5f7;
        --muted: #c0c6d0;
        --card: rgba(15, 35, 57, 0.75);
        --maxw: 1200px;
      }
      * { box-sizing: border-box; }
      body {
        margin: 0;
        font-family: "Inter", system-ui, -apple-system, sans-serif;
        color: var(--text);
        background: var(--navy);
      }
      .hero {
        position: relative;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        color: var(--text);
        background: linear-gradient(var(--navy-80), var(--navy-80)), url(${bgUrl}) center/cover no-repeat;
      }
      .nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 24px 32px;
        max-width: var(--maxw);
        width: 100%;
        margin: 0 auto;
      }
      .brand { display: flex; align-items: center; gap: 10px; font-weight: 700; letter-spacing: 1px; }
      .links { display: flex; gap: 24px; align-items: center; }
      .links a { color: var(--muted); text-decoration: none; font-weight: 500; transition: color .2s; }
      .links a:hover { color: var(--text); }
      .cta-small {
        padding: 10px 16px;
        background: var(--gold);
        color: #0f1a2a;
        border-radius: 4px;
        font-weight: 700;
        text-decoration: none;
      }
      .hero-body {
        flex: 1;
        display: flex;
        align-items: center;
        padding: 60px 32px 80px;
      }
      .hero-inner {
        max-width: var(--maxw);
        margin: 0 auto;
        text-align: center;
      }
      .pill {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 10px 18px;
        background: rgba(199, 163, 75, 0.15);
        color: var(--gold);
        border: 1px solid rgba(199, 163, 75, 0.4);
        border-radius: 999px;
        font-weight: 600;
        letter-spacing: 0.4px;
      }
      h1 {
        margin: 26px 0 12px;
        font-size: clamp(42px, 6vw, 68px);
        font-weight: 700;
        line-height: 1.05;
      }
      h1 .accent { color: var(--gold); font-weight: 600; }
      .subhead {
        max-width: 720px;
        margin: 0 auto 32px;
        color: var(--muted);
        font-size: 17px;
        line-height: 1.6;
      }
      .cta-row {
        display: inline-flex;
        gap: 14px;
        margin-bottom: 36px;
      }
      .cta-primary, .cta-secondary {
        padding: 14px 22px;
        border-radius: 4px;
        font-weight: 700;
        text-decoration: none;
        border: 1px solid transparent;
        transition: transform .15s ease, box-shadow .15s ease, background .2s, border .2s;
      }
      .cta-primary {
        background: var(--gold);
        color: #0f1a2a;
        box-shadow: 0 10px 24px rgba(0,0,0,0.25);
      }
      .cta-secondary {
        background: rgba(15,35,57,0.7);
        color: var(--text);
        border-color: rgba(255,255,255,0.2);
      }
      .cta-primary:hover, .cta-secondary:hover { transform: translateY(-2px); }
      .stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 18px;
        max-width: 720px;
        margin: 0 auto;
      }
      .stat {
        padding: 16px;
        background: var(--card);
        border: 1px solid rgba(255,255,255,0.08);
        border-radius: 10px;
      }
      .stat .label { color: var(--muted); font-size: 12px; letter-spacing: 1px; text-transform: uppercase; margin-bottom: 6px; }
      .stat .value { font-size: 24px; font-weight: 700; color: var(--text); }
      @media (max-width: 768px) {
        .nav { flex-direction: column; gap: 12px; }
        .links { flex-wrap: wrap; justify-content: center; }
        .cta-row { flex-direction: column; width: 100%; }
        .cta-row a { text-align: center; }
      }
    </style>
  </head>
  <body>
    <section class="hero">
      <header class="nav">
        <div class="brand">ðŸ’Ž DULMALAND</div>
        <div class="links">
          <a href="#services">Services</a>
          <a href="#portfolio">Portfolio</a>
          <a href="#destinations">Destinations</a>
          <a href="#about">About</a>
          <a href="#contact">Contact</a>
          <a class="cta-small" href="#contact">Get Started</a>
        </div>
      </header>

      <div class="hero-body">
        <div class="hero-inner">
          <div class="pill">ðŸ’Ž Global Investment Advisory</div>
          <h1>
            Invest Globally.<br />
            <span class="accent">Live Exceptionally.</span>
          </h1>
          <p class="subhead">
            Premier Golden Visa advisory. Curated investment opportunities across Spain and Japan. A future without borders.
          </p>
          <div class="cta-row">
            <a class="cta-primary" href="#contact">Schedule Consultation</a>
            <a class="cta-secondary" href="#portfolio">Explore Investments</a>
          </div>
          <div class="stats">
            <div class="stat">
              <div class="label">Countries</div>
              <div class="value">10+</div>
            </div>
            <div class="stat">
              <div class="label">Assets Managed</div>
              <div class="value">â‚¬50M+</div>
            </div>
            <div class="stat">
              <div class="label">Success Rate</div>
              <div class="value">100%</div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>