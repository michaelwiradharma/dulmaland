<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Dulmaland | Global Investment Advisory</title>
    <link rel="icon" type="image/jpeg" href="/dulmaland-logo.jpeg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --navy: #0f2339;
        --navy-80: rgba(15, 35, 57, 0.8);
        --gold: #c7a34b;
        --text: #f4f5f7;
        --muted: #c0c6d0;
        --card: rgba(15, 35, 57, 0.75);
        --maxw: 1200px;
      }
      * {
        box-sizing: border-box;
      }
      html {
        scroll-behavior: smooth;
      }
      body {
        margin: 0;
        font-family:
          "Inter",
          system-ui,
          -apple-system,
          sans-serif;
        color: var(--text);
        background: var(--navy);
      }
      .hero {
        position: relative;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        color: var(--text);
        background:
          linear-gradient(var(--navy-80), var(--navy-80)),
          url("/backdrop.jpg") center/cover no-repeat;
      }
      .nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 24px 32px;
        max-width: var(--maxw);
        width: 100%;
        margin: 0 auto;
      }
      .brand {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 700;
        letter-spacing: 1px;
      }
      .links {
        display: flex;
        gap: 24px;
        align-items: center;
      }
      .links a {
        color: var(--muted);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s;
      }
      .links a:hover {
        color: var(--text);
      }
      .cta-small {
        padding: 10px 16px;
        background: var(--gold);
        color: #0f1a2a;
        border-radius: 4px;
        font-weight: 700;
        text-decoration: none;
      }
      .hero-body {
        flex: 1;
        display: flex;
        align-items: center;
        padding: 60px 32px 80px;
      }
      .hero-inner {
        max-width: var(--maxw);
        margin: 0 auto;
        text-align: center;
      }
      .pill {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 10px 18px;
        background: rgba(199, 163, 75, 0.15);
        color: var(--gold);
        border: 1px solid rgba(199, 163, 75, 0.4);
        border-radius: 999px;
        font-weight: 600;
        letter-spacing: 0.4px;
      }
      h1 {
        margin: 26px 0 12px;
        font-size: clamp(42px, 6vw, 68px);
        font-weight: 700;
        line-height: 1.05;
      }
      h1 .accent {
        color: var(--gold);
        font-weight: 600;
      }
      .subhead {
        max-width: 720px;
        margin: 0 auto 32px;
        color: var(--muted);
        font-size: 17px;
        line-height: 1.6;
      }
      .cta-row {
        display: inline-flex;
        gap: 14px;
        margin-bottom: 36px;
      }
      .cta-primary,
      .cta-secondary {
        padding: 14px 22px;
        border-radius: 4px;
        font-weight: 700;
        text-decoration: none;
        border: 1px solid transparent;
        transition:
          transform 0.15s ease,
          box-shadow 0.15s ease,
          background 0.2s,
          border 0.2s;
      }
      .cta-primary {
        background: var(--gold);
        color: #0f1a2a;
        box-shadow: 0 10px 24px rgba(0, 0, 0, 0.25);
      }
      .cta-secondary {
        background: rgba(15, 35, 57, 0.7);
        color: var(--text);
        border-color: rgba(255, 255, 255, 0.2);
      }
      .cta-primary:hover,
      .cta-secondary:hover {
        transform: translateY(-2px);
      }
      .stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 18px;
        max-width: 720px;
        margin: 0 auto;
      }
      .stat {
        padding: 16px;
        background: var(--card);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 10px;
      }
      .stat .label {
        color: var(--muted);
        font-size: 12px;
        letter-spacing: 1px;
        text-transform: uppercase;
        margin-bottom: 6px;
      }
      .stat .value {
        font-size: 24px;
        font-weight: 700;
        color: var(--text);
      }
      .hero-chevron {
        position: absolute;
        left: 50%;
        bottom: 24px;
        transform: translateX(-50%);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: var(--text);
        text-decoration: none;
        font-size: 20px;
        transition:
          transform 0.25s ease-out,
          opacity 0.2s ease;
      }

      .hero-chevron:hover {
        transform: translate(-50%, -6px) scale(1.12);
        opacity: 0.95;
      }
      .hero-chevron svg {
        display: block;
      }
      @media (max-width: 768px) {
        .nav {
          flex-direction: column;
          gap: 12px;
        }
        .links {
          flex-wrap: wrap;
          justify-content: center;
        }
        .cta-row {
          flex-direction: column;
          width: 100%;
        }
        .cta-row a {
          text-align: center;
        }
      }
      .why {
        background: #f5f3ee;
        color: #1b2433;
        padding: 90px 40px 100px;
        min-height: 100vh;
        display: flex;
        align-items: center;
      }
      .why-inner {
        max-width: var(--maxw);
        margin: 0 auto;
        display: grid;
        grid-template-columns: minmax(0, 1.2fr) minmax(0, 1.3fr);
        gap: 60px;
        align-items: flex-start;
      }
      .why-copy h2 {
        font-size: 36px;
        line-height: 1.2;
        margin: 10px 0 22px;
      }
      .eyebrow {
        letter-spacing: 0.2em;
        text-transform: uppercase;
        font-size: 11px;
        color: #b7a57b;
      }
      .why-body {
        font-size: 15px;
        line-height: 1.8;
        color: #545b68;
        margin-bottom: 16px;
      }
      .why-grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 24px;
      }
      .why-card {
        background: #ffffff;
        border-radius: 8px;
        padding: 26px 24px 24px;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.04);
      }
      .why-icon {
        width: 40px;
        height: 40px;
        border-radius: 6px;
        background: #121a2a;
        color: #f8f8f8;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 18px;
        font-size: 18px;
      }
      .why-card h3 {
        margin: 0 0 6px;
        font-size: 16px;
      }
      .why-card p {
        margin: 0;
        font-size: 14px;
        line-height: 1.7;
        color: #6a7180;
      }
      .why-stats {
        display: flex;
        gap: 40px;
        border-top: 1px solid #e0ddd6;
        margin-top: 32px;
        padding-top: 24px;
      }
      .why-stat-value {
        font-size: 24px;
        font-weight: 700;
      }
      .why-stat-label {
        font-size: 11px;
        letter-spacing: 0.12em;
        text-transform: uppercase;
        color: #8a8f99;
        margin-top: 4px;
      }

      @media (max-width: 900px) {
        .why-inner {
          grid-template-columns: minmax(0, 1fr);
        }
        .why {
          padding: 70px 24px 80px;
        }
        .why-grid {
          grid-template-columns: minmax(0, 1fr);
        }
        .why-stats {
          flex-direction: column;
          gap: 16px;
        }
      }
    </style>
  </head>
