---
import BrandLogo from "../components/BrandLogo.astro";

const bgUrl =
  "https://images.unsplash.com/photo-1467269204594-9661b134dd2b?auto=format&fit=crop&w=2000&q=80"; // optional decorative image
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Dulmaland | Begin Your Journey</title>
    <link rel="icon" type="image/jpeg" href="/dulmaland-logo.jpeg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --navy: #050b14;
        --navy-soft: #0d1a2b;
        --gold: #c7a34b;
        --text: #f4f5f7;
        --muted: #a1a8b5;
        --maxw: 1200px;
      }
      * {
        box-sizing: border-box;
      }
      body {
        margin: 0;
        font-family:
          "Montserrat",
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          sans-serif;
        font-weight: 500;
        background: var(--navy);
        color: var(--text);
      }
      .shell {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        padding: 32px 32px 60px;
      }
      .nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: var(--maxw);
        margin: 0 auto 40px;
      }
      .brand {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 700;
        letter-spacing: 1px;
      }
      .links {
        display: flex;
        gap: 24px;
        align-items: center;
      }
      .links a {
        color: var(--muted);
        text-decoration: none;
        font-size: 14px;
      }
      .links a:hover {
        color: var(--text);
      }
      .cta-small {
        padding: 9px 16px;
        background: var(--gold);
        color: #0f1a2a;
        border-radius: 4px;
        font-weight: 700;
        text-decoration: none;
      }
      .main {
        flex: 1;
        max-width: var(--maxw);
        margin: 0 auto;
        display: grid;
        grid-template-columns: minmax(0, 1.1fr) minmax(0, 1.1fr);
        gap: 40px;
        align-items: flex-start;
      }
      .eyebrow {
        letter-spacing: 0.22em;
        text-transform: uppercase;
        font-size: 11px;
        color: var(--gold);
      }
      h1 {
        font-size: 36px;
        margin: 10px 0 24px;
      }
      .lead {
        color: var(--muted);
        font-size: 15px;
        line-height: 1.8;
        max-width: 520px;
        margin-bottom: 26px;
      }
      .info-list {
        margin: 0 0 24px;
        padding: 0;
        list-style: none;
        display: grid;
        gap: 14px;
      }
      .info-item {
        display: flex;
        gap: 14px;
        align-items: flex-start;
      }
      .info-icon {
        width: 34px;
        height: 34px;
        border-radius: 6px;
        background: #111b2b;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
      }
      .info-text strong {
        display: block;
        font-size: 14px;
      }
      .info-text span {
        display: block;
        font-size: 12px;
        color: var(--muted);
      }
      .photo {
        margin-top: 10px;
        border-radius: 10px;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.08);
      }
      .photo img {
        display: block;
        width: 100%;
        height: auto;
      }
      .card {
        background: #ffffff;
        border-radius: 6px;
        padding: 26px 26px 20px;
        color: #1b2433;
        box-shadow: 0 18px 40px rgba(0, 0, 0, 0.25);
      }
      .card h2 {
        font-size: 14px;
        letter-spacing: 0.18em;
        text-transform: uppercase;
        color: #999fab;
        margin: 0 0 12px;
      }
      .row {
        display: grid;
        grid-template-columns: minmax(0, 1.2fr) minmax(0, 1fr);
        gap: 12px;
      }
      .field {
        display: flex;
        flex-direction: column;
        gap: 4px;
        margin-bottom: 12px;
      }
      label {
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        color: #9aa0ab;
      }
      input,
      select,
      textarea {
        border-radius: 4px;
        border: 1px solid #e0e3ea;
        padding: 10px 12px;
        font: inherit;
        color: inherit;
      }
      textarea {
        resize: vertical;
        min-height: 120px;
      }
      .submit-row {
        margin-top: 10px;
        display: flex;
        flex-direction: column;
        gap: 6px;
      }
      button {
        border: none;
        border-radius: 4px;
        padding: 13px 20px;
        font-weight: 700;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        background: #0f1a2a;
        color: #ffffff;
        cursor: pointer;
      }
      .note {
        font-size: 11px;
        color: #a0a5b2;
      }
      @media (max-width: 900px) {
        .shell {
          padding: 24px 20px 40px;
        }
        .main {
          grid-template-columns: minmax(0, 1fr);
        }
      }
    </style>
  </head>
  <body>
    <div class="shell">
      <header class="nav">
        <div class="brand">
          <BrandLogo size={26} />
          <span>DULMALAND</span>
        </div>
        <div class="links">
          <a href="/">Home</a>
          <a href="/#services">Services</a>
          <a href="/#portfolio">Portfolio</a>
          <a href="/#destinations">Destinations</a>
          <a href="/#about">About</a>
          <a href="/contact">Contact</a>
          <a class="cta-small" href="/contact">Get Started</a>
        </div>
      </header>

      <main class="main">
        <section>
          <p class="eyebrow">Get in touch</p>
          <h1>Begin Your Journey</h1>
          <p class="lead">
            Schedule a confidential consultation with our advisory team. Whether
            you're interested in Spanish Golden Visa opportunities or Tokyo real
            estate, we'll craft a personalized strategy for your global future.
          </p>

          <ul class="info-list">
            <li class="info-item">
              <div class="info-icon">üìç</div>
              <div class="info-text">
                <strong>Barcelona, Spain</strong>
                <span>Headquarters</span>
              </div>
            </li>
            <li class="info-item">
              <div class="info-icon">üìû</div>
              <div class="info-text">
                <strong>+34 600 000 000</strong>
                <span>Direct Line</span>
              </div>
            </li>
            <li class="info-item">
              <div class="info-icon">‚úâÔ∏è</div>
              <div class="info-text">
                <strong>info@dulmaland.com</strong>
                <span>General Inquiries</span>
              </div>
            </li>
          </ul>

          <div class="photo">
            <img src={bgUrl} alt="Barcelona cityscape" loading="lazy" />
          </div>
        </section>

        <section>
          <form
            class="card"
            action="https://formspree.io/f/YOUR_FORM_ID"
            method="POST"
          >
            <h2>Request Consultation</h2>

            <div class="field">
              <label for="name">Full name *</label>
              <input
                id="name"
                name="name"
                type="text"
                required
                placeholder="Your full name"
              />
            </div>

            <div class="row">
              <div class="field">
                <label for="email">Email *</label>
                <input
                  id="email"
                  name="email"
                  type="email"
                  required
                  placeholder="your@email.com"
                />
              </div>
              <div class="field">
                <label for="phone">Phone</label>
                <input
                  id="phone"
                  name="phone"
                  type="tel"
                  placeholder="+1 234 567 890"
                />
              </div>
            </div>

            <div class="row">
              <div class="field">
                <label for="interest">Primary interest</label>
                <select id="interest" name="interest">
                  <option value="">Select‚Ä¶</option>
                  <option>Spanish Golden Visa</option>
                  <option>Japanese Residency</option>
                  <option>Real Estate Investment</option>
                  <option>Portfolio Diversification</option>
                </select>
              </div>
              <div class="field">
                <label for="range">Investment range</label>
                <select id="range" name="range">
                  <option value="">Select‚Ä¶</option>
                  <option>‚Ç¨250k‚Äì‚Ç¨500k</option>
                  <option>‚Ç¨500k‚Äì‚Ç¨1M</option>
                  <option>‚Ç¨1M‚Äì‚Ç¨3M</option>
                  <option>‚Ç¨3M+</option>
                </select>
              </div>
            </div>

            <div class="field">
              <label for="message">Message</label>
              <textarea
                id="message"
                name="message"
                placeholder="Tell us about your goals and timeline‚Ä¶"></textarea>
            </div>

            <div class="submit-row">
              <button type="submit">Request Consultation</button>
              <p class="note">
                Your information is kept strictly confidential.
              </p>
            </div>
          </form>
        </section>
      </main>
    </div>
  </body>
</html>
