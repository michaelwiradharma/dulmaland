---
const size = Astro.props.size ?? 26;
---

<span class="brand-icon" aria-hidden="true">
  <svg
    width={size}
    height={(size * 22) / 26}
    viewBox="0 0 26 22"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M3 8L8 2H18L23 8L13 20L3 8Z"
      stroke="#C7A34B"
      stroke-width="1.6"
      stroke-linejoin="round"
    />
    <path
      d="M8 2L11 8L9.5 14.5"
      stroke="#C7A34B"
      stroke-width="1.4"
      stroke-linecap="round"
    />
    <path
      d="M18 2L15 8L16.5 14.5"
      stroke="#C7A34B"
      stroke-width="1.4"
      stroke-linecap="round"
    />
    <path
      d="M3 8H23"
      stroke="#C7A34B"
      stroke-width="1.2"
      stroke-linecap="round"
    />
  </svg>
</span>

<style>
  .brand-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  .brand-icon svg {
    display: block;
  }
</style>

